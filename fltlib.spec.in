%define name @PACKAGE@
%define version @VERSION@
%define release 1

Summary: FLTLIB Library
Name: %{name}
Version: %{version}
Release: %{release}
Source0: %{name}-%{version}.tar.gz
Copyright: LGPL
Group: System Environment/Libraries
BuildRoot: /var/tmp/%{name}-buildroot
Prefix: %{_prefix}
Packager: Andrew Sampson

%description
Library for opening OpenFlight 3D model files.
(http://fltlib.sourceforge.net).

%package devel
Summary: Library for opening OpenFlight 3D model files.
Group: Development/Libraries
Requires: %{name}

%description devel
Library for opening OpenFlight 3D model files.
(http://fltlib.sourceforge.net).

%prep
rm -rf ${RPM_BUILD_ROOT}

%setup 

%build
CXXFLAGS="$RPM_OPT_FLAGS" CFLAGS="$RPM_OPT_FLAGS" ./configure --prefix=%{prefix}
make

%install
rm -rf $RPM_BUILD_ROOT
make install prefix=$RPM_BUILD_ROOT/%{prefix}

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
%doc README CHANGES COPYING
%{prefix}/lib/lib*.so.*

%files devel
%defattr(-,root,root)
%{prefix}/lib/lib*.a
%{prefix}/lib/lib*.so
%{prefix}/include/

%changelog
* Fri Jan 13 2006 Andrew Sampson
- initial spec file


